<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/fragment_padding_default"
    tools:context=".ui.view.SettingsFragment">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/fragment_h1_mb"
        android:text="@string/title_for_settings_fragment"
        android:textSize="@dimen/fragment_h1_size" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/settings_item_use_adult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="@string/item_label_1_for_settings_fragment" />

</LinearLayout>